#include <stdio.h>

int main() {
    char str[100];
    int length = 0;

    printf("Enter a string: ");
    fgets(str, 100, stdin);

    while(str[length] != '\0') {
        length++;
    }

    // Exclude newline character if present
    if(str[length - 1] == '\n')
        length--;

    printf("Length of the string = %d", length);

    return 0;
}
