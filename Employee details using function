#include <stdio.h>

// Structure definition
struct employee
{
    int empId;
    char name[30];
    float salary;
};

int main()
{
    struct employee e;

    printf("Enter Employee ID: ");
    scanf("%d", &e.empId);

    printf("Enter Employee Name: ");
    scanf("%s", e.name);

    printf("Enter Salary: ");
    scanf("%f", &e.salary);

    printf("\n--- Employee Details ---\n");
    printf("ID: %d\n", e.empId);
    printf("Name: %s\n", e.name);
    printf("Salary: %.2f\n", e.salary);

    return 0;
}