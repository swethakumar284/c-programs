#include <stdio.h>

struct Customer
{
    int id;
    char name[30];
    char mobile[15];
};

int main()
{
    int i, n, searchId, found = 0;
    struct Customer c[10];

    printf("Enter number of customers: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Customer %d\n", i + 1);

        printf("Customer ID: ");
        scanf("%d", &c[i].id);

        printf("Name: ");
        scanf(" %[^\n]", c[i].name);

        printf("Mobile Number: ");
        scanf("%s", c[i].mobile);
    }

    printf("\nEnter Customer ID to search: ");
    scanf("%d", &searchId);

    for(i = 0; i < n; i++)
    {
        if(c[i].id == searchId)
        {
            printf("\nCustomer Found!");
            printf("\nID: %d", c[i].id);
            printf("\nName: %s", c[i].name);
            printf("\nMobile: %s", c[i].mobile);
            found = 1;
            break;
        }
    }

    if(found == 0)
        printf("\nCustomer not found.");

    return 0;
}