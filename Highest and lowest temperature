#include <stdio.h>

int main() {
    float temp[7];
    int i;
    float highest, lowest;

    for(i = 0; i < 7; i++) {
        printf("Enter temperature of day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }

    highest = lowest = temp[0];

    for(i = 1; i < 7; i++) {
        if(temp[i] > highest)
            highest = temp[i];
        if(temp[i] < lowest)
            lowest = temp[i];
    }

    printf("\nHighest temperature in the week = %.2f", highest);
    printf("\nLowest temperature in the week = %.2f", lowest);

    return 0;
}
