#include <stdio.h>

int main()
{
    int days, i, workedDays = 0;
    int attendance;

    printf("Enter number of days in the month: ");
    scanf("%d", &days);

    printf("Enter attendance for each day (1 = Worked, 0 = Not Worked)\n");

    for (i = 1; i <= days; i++)
    {
        printf("Day %d: ", i);
        scanf("%d", &attendance);

        if (attendance == 1)
        {
            workedDays++;
        }
    }

    printf("\nTotal number of days worked in the month: %d\n", workedDays);

    return 0;
}