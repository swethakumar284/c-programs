#include <stdio.h>

struct BusTicket {
    int ticketNo;
    char passengerName[30];
    float fare;
};

int main() {
    struct BusTicket b;

    printf("Enter Ticket Number: ");
    scanf("%d", &b.ticketNo);

    printf("Enter Passenger Name: ");
    scanf("%s", b.passengerName);

    printf("Enter Fare: ");
    scanf("%f", &b.fare);

    printf("\n--- Bus Ticket Details ---\n");
    printf("Ticket No: %d\n", b.ticketNo);
    printf("Passenger Name: %s\n", b.passengerName);
    printf("Fare: %.2f\n", b.fare);

    return 0;
}