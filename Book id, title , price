#include <stdio.h>

struct Book
{
    int id;
    char title[50];
    float price;
};

int main()
{
    int i, n;
    struct Book b[10];

    printf("Enter number of books: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("\nEnter details of Book %d\n", i + 1);
        printf("Book ID: ");
        scanf("%d", &b[i].id);

        printf("Title: ");
        scanf(" %[^\n]", b[i].title);

        printf("Price: ");
        scanf("%f", &b[i].price);
    }

    printf("\nBook Details:\n");
    for(i = 0; i < n; i++)
    {
        printf("\nBook ID: %d", b[i].id);
        printf("\nTitle: %s", b[i].title);
        printf("\nPrice: %.2f\n", b[i].price);
    }

    return 0;
}