#include <stdio.h>

struct Product {
    int id;
    char name[30];
    float price;
};

int main() {
    struct Product p;

    printf("Enter Product ID: ");
    scanf("%d", &p.id);

    printf("Enter Product Name: ");
    scanf("%s", p.name);

    printf("Enter Product Price: ");
    scanf("%f", &p.price);

    printf("\n--- Product Details ---\n");
    printf("ID: %d\n", p.id);
    printf("Name: %s\n", p.name);
    printf("Price: %.2f\n", p.price);

    return 0;
}