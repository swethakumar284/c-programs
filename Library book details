#include <stdio.h>


struct book
{
    int bookId;
    char title[30];
    char author[30];
};

int main()
{
    struct book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.bookId);

    printf("Enter Book Title: ");
    scanf("%s", b.title);

    printf("Enter Author Name: ");
    scanf("%s", b.author);

    printf("\n--- Book Details ---\n");
    printf("Book ID: %d\n", b.bookId);
    printf("Title: %s\n", b.title);
    printf("Author: %s\n", b.author);

    return 0;
}